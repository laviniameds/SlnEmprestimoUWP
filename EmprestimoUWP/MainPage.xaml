                </Grid>
            </PivotItem>
            <PivotItem Header="Listar Emprestados">
                <ListView x:Name="lvVendidos" HorizontalAlignment="Left" Height="525" Margin="10,10,0,0" VerticalAlignment="Top" Width="316">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock FontSize="12">
                                        <Run Text="{Binding Id}" />
                                        <Run Text=" - " /> 
                                        <Run Text="{Binding Modelo}" />
                                        <Run Text=" - " /> 
                                        <Run Text="{Binding Ano}" />
                                        <Run Text=" - " /> 
                                        <Run Text="{Binding Preco}" />
                                        <Run Text=" - Vendido: " /> 
                                        <Run Text="{Binding Vendido}" />
                                        <Run Text=" - " /> 
                                        <Run Text="{Binding Fab.Descricao}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
