            <PivotItem Header="Inserir Emprestimo">
                <Grid>
                    <CalendarDatePicker HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="50" Width="316"/>
                    <TextBox x:Name="txtDesc" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="Descrição" VerticalAlignment="Top" Width="150"/>
                    <ComboBox x:Name="cbContato" HorizontalAlignment="Left" Margin="165,47,0,0" VerticalAlignment="Top" Width="161"/>
